<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"
        aria-hidden="true">&times;</button>
      <h3 class="modal-title"><%= t ".user_title" %></h3>
    </div>
    <div class="modal-body">
      <div class="panel panel-success">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-4">
              <%= image_tag set_avatar(user), class: "img-circle" %>
            </div>
            <div class="col-md-8">
              <h4><%= user.name %></h4>
              <p><%= t ".joined", time: format_date(user.created_at) %></p>
            </div>
          </div>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <td><%= t "form.email" %></td>
              <td><%= user.email %></td>
            </tr>
            <tr>
              <td><%= t "form.address" %></td>
              <td><%= user.address %></td>
            </tr>
            <tr>
              <td><%= t "form.phone_number" %></td>
              <td><%= user.phone_number %></td>
            </tr>
            <tr>
              <td><%= t ".role" %></td>
              <td class="user-text-trans"><%= user.role %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="modal-footer">
      <% if user.is_supervisor? %>
      <div class="pull-left">
        <%= link_to user do %>
          <button class="btn btn-success"><%= t "users.user.show" %></button>
        <% end %>
        <%= link_to edit_user_path(user) do %>
          <button class="btn btn-primary"><%= t ".edit_profile" %></button>
        <% end %>
      </div>
      <% else %>
      <div class="pull-left">
        <%= link_to [:trainee, user] do %>
          <button class="btn btn-success"><%= t "users.user.show" %></button>
        <% end %>
        <%= link_to edit_trainee_user_path(user) do %>
          <button class="btn btn-primary"><%= t ".edit_profile" %></button>
        <% end %>
      </div>
      <% end %>
      <div class="pull-right">
        <button class="btn btn-default" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>
  </div>
</div>
