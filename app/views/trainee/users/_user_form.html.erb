<%= form_for [:trainee, @user] do |f| %>
  <h2 class="titleForm"><%= yield :title_user %></h2>
  <div id="rainbow"></div>

  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.text_field :name, class: "nameInput registerInput form-control",
      placeholder: t("form.full_name") %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "emailInput registerInput form-control",
      placeholder: t("form.email") %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "passwordInput registerInput form-control",
      placeholder: t("form.password") %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation,
      class: "passwordConfirmationInput registerInput form-control",
      placeholder: t("form.pass_confirmation") %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone_number, class: "phoneInput registerInput form-control",
      placeholder: t("form.phone_number") %>
  </div>
  <div class="form-group">
    <%= f.text_field :address, class: "addressInput registerInput form-control",
      placeholder: t("form.address") %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "userAvatar" %>
  </div>
  <div class="signupButton form-group">
    <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block btn-form" %>
  </div>

  <div id="rainbow"></div>
<% end %>
