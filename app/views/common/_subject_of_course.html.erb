<div class="item-subject">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag "default_course_cover.png", class: "subject_cover" %>
    </div>
    <div class="col-md-9">
      <div class="content-subject">
        <h4>
          <%= link_to subject.name, "#" %>
          <span class="subject-time-training">
            (<%= subject.time_training %> <%= t "form.hours" %>)
          </span>
        </h4>
        <p>
          <span class="italic-text"><%= t "form.description" %>:</span>
          <%= subject.description %>
        </p>
        <p class="js-show-content">
          <button type="button" class="btn btn-sm btn-info js-show-content__link">
            <%= t ".show_more" %>
          </button>
        </p>
        <p class="subject-content hidden">
          <span class="italic-text"><%= t "form.content" %>:</span>
          <%= subject.content %>
        </p>
      </div>
    </div>
    <div class="col-md-1">
      <% if current_user&.supervisor? %>
        <div class="dropdown">
          <p class="setting dropdown-toggle" data-toggle="dropdown"></p>
          <ul class="dropdown-menu">
            <li><%= link_to t("form.view"), "#" %></li>
            <li><%= link_to t("form.remove"), "#" %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
