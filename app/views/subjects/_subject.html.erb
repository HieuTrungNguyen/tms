<div class="col-md-4">
  <div class="subject-item">
    <div class="subject-item__cover">
      <%= image_tag set_object_img(subject.cover, Settings.subject.default_cover),
        class: "subject-item__subject-cover img-rounded img-responsive" %>
    </div>
    <div class="subject-item__content">
      <div class="content-name">
        <h4 class="content-name__name"><%= link_to subject.name, subject %></h4>
        <p class="content-name__joined-date">
          <%= l subject.created_at, format: "%d/%m/%Y" %>
        </p>
      </div>
      <div class="content-descript">
        <span class="content-descript__tag">
          <span class="content-descript__title"><%= t "form.description" %></span>:
        </span>
        <%= subject.description %>
      </div>
      <div>
        <%= link_to t("courses.show.details"), subject,
          class: "btn btn-info btn__subject-detail" %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
