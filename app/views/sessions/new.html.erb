<div class="containerFrontPage">
  <%= form_for :session, url: login_path do |f| %>
    <div id="titleContainer"><%= t ".title_login" %></div>
    <div id="rainbow"></div>

    <div class="form-group">
      <%= f.email_field :email, class: "emailInput registerInput form-control",
        placeholder: t("form.email") %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "passwordInput registerInput form-control",
        placeholder: t("form.password") %>
    </div>

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t ".remember_me" %></span>
    <% end %>
    <div class="loginButton">
      <%= f.submit t("form.login"), class: "btn btn-primary" %>
    </div>
    <p><%= t ".new_user" %> <%= link_to t(".signup_now"), signup_path %></p>

    <div id="rainbow"></div>
  <% end %>
</div>
