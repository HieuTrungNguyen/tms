<div class="col-md-6">
  <div class="item">
    <div class="list-group-item">
      <div class="row media-item">
        <div class="col-md-3 media-image-item">
          <figure class="pull-left">
            <%= image_tag set_object_img(course.cover, Settings.course.default_cover),
             class: "media-img img-rounded img-responsive" %>
          </figure>
        </div>
        <div class="col-md-6 media-content">
          <h4 class="item-heading"><%= link_to course.name, course %></h4>
          <p class="item-text"><%= course.description %></p>
        </div>
        <div class="col-md-3 media-more-inform text-center">
          <h3 class="time">
            <%= course.time_training %> <small><%= t "form.hours" %></small>
          </h3>
          <% if current_user&.supervisor? %>
            <div class="dropdown">
              <p class="setting dropdown-toggle" data-toggle="dropdown"></p>
              <ul class="dropdown-menu">
                <li><%= link_to t(".edit"), edit_course_path(course) %></li>
                <li><%= link_to t(".delete"), course, method: :delete,
                  data: {confirm: t("sure?")} %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <%= link_to t(".view_more"), course, class: "btn btn-info btn-block btn-more" %>
      </div>
    </div>
  </div>
</div>
